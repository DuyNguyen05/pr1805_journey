  <!-- Area Chart Example-->
  <div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-chart-area"></i>
      Area Chart User Activated</div>
    <div class="card-body">
      <canvas id="myAreaChart" width="100%" height="30"></canvas>
      <%= area_chart @users %>
    </div>
    <div class="card-footer small text-muted">Updated <%= Time.zone.now.strftime("%T-%d/%m/%Y") %></div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="card mb-3">
        <div class="card-header">
          <i class="fas fa-chart-bar"></i>
          Column Chart Post</div>
        <div class="card-body">
          <canvas id="myBarChart" width="100%" height="50"></canvas>
          <%= column_chart @posts %>
        </div>
        <div class="card-footer small text-muted">Updated <%= Time.zone.now.strftime("%T-%d/%m/%Y") %></div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card mb-3">
        <div class="card-header">
          <i class="fas fa-chart-pie"></i>
          Pie Chart Place </div>
        <div class="card-body">
          <canvas id="myPieChart" width="100%" height="100"></canvas>
          <%= pie_chart @places %>
        </div>
        <div class="card-footer small text-muted">Updated <%= Time.zone.now.strftime("%T-%d/%m/%Y") %></div>
      </div>
    </div>
  </div>
</div>
