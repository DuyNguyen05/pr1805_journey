  <!-- Area Chart Example-->
  <div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-chart-area"></i>
       User Activated</div>
    <div class="card-body">
      <canvas id="myAreaChart" width="100%" height="30"></canvas>
      <div class="btn-group">
        <p><strong>Filter by: </strong></p>
        &nbsp; &nbsp;
        <%= form_tag admin_root_path, method: :get do %>
          <%= hidden_field_tag :type, "week" %>
          <%= submit_tag "Weekly", class: "btn btn-xs btn-primary" %>
        <% end %>
        &nbsp; &nbsp;
        <%= form_tag admin_root_path, method: :get do %>
          <%= hidden_field_tag :type, "month" %>
          <%= submit_tag "Monthly", class: "btn btn-xs btn-primary" %>
        <% end %>
        &nbsp; &nbsp;
        <%= form_tag admin_root_path, method: :get do %>
          <%= hidden_field_tag :type, "year" %>
          <%= submit_tag "Yearly", class: "btn btn-xs btn-primary" %>
        <% end %>
      </div>
      <%= area_chart @users %>
    </div>
    <div class="card-footer small text-muted">Updated <%= Time.zone.now.strftime("%T-%d/%m/%Y") %></div>
  </div>
