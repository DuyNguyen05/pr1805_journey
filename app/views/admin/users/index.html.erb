<h3><strong>Users</strong></h3>
    <div>
      <div><h6>Updated At: <%= Time.zone.now.strftime("%T-%d/%m/%Y") %></h6></div>
      <%= will_paginate @users %>
      <table class="table table-dark">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Is_Admin</th>
          <th>Activated_At</th>
          <th>Show</th>
          <th>Block</th>
          <th>Delete</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email  %></td>
            <td><%= user.phone %></td>
            <td><%= user.is_admin  %></td>
            <td><%= user.activated_at %></td>
            <td><%= button_to "Show", admin_user_path(user),
              class: "btn btn-info", method: :get %></td>
            <% if user.blocked_at? %>
              <td><%= button_to "Unblock", admin_user_path(user),
                  class: "btn btn-warning", method: :patch,
                  data: {confirm: "Are you sure ?"} %></td>
            <% else %>
                <td><%= button_to "Block", admin_user_path(user),
                  class: "btn btn-warning", method: :patch,
                  data: {confirm: "Are you sure ?"} %></td>
            <% end %>
            <td>
              <%= button_to "Delete", admin_user_path(user),
                class: "btn btn-danger", method: :delete,
                data: {confirm: "Are you sure ?"} %>
            </td>
          </tr>
        <% end %>
        </table>
  </div>
</div>

