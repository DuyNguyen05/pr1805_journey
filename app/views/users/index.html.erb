<h1>Users</h1>
<div>
  <%= form_tag users_path, method: :get do %>
    <div class="input-group">
      <%= text_field_tag :keyword, params[:keyword], placeholder:
        "Enter Email Or Name", class: "form-control" %>
      <div class="input-group-btn">
        <%= button_tag "", class: "btn btn-info glyphicon glyphicon-search"%>
      </div>
    </div>
  <% end %>
</div>
<br>
<div class="row">
  <table class="table table-hover">
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
    </tr>
    <tr>
      <% if params[:keyword] %>
        <%= render @results %>
        <%= link_to "Back", users_path, class: "btn btn-primary" %>
      <% else %>
        <%= render @users %>
      <% end %>
    </tr>
  </table>
  <%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'pagination-lg') %>
</div>
